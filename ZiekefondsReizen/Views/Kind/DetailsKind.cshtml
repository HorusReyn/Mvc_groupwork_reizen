@model KindDetailsViewModel
@{
    ViewData["Title"] = "Kind Details";
}

<h2>@Model.Naam</h2>
<br />
<table class="table">
    <tr>
        <td>ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Geboortedatum</td>
        <td>@Model.Geboorte</td>
    </tr>
    <tr>
        <td>Allergieën</td>
        <td>@Model.Allergieen</td>
    </tr>
    <tr>
        <td>Medicatie</td>
        <td>@Model.Medicatie</td>
    </tr>
</table>
<br />
<h3>Groepsreizen</h3>
<table class="table">
    <tr>
        <td>Bestemming</td>
        <td>Datum</td>
        <td>Opmerking</td>
    </tr>
    @{
        if (Model.Deelnames != null)
        {
            foreach (Deelnemer deelnemer in Model.Deelnames)
            {
                <tr>
                    <td>@deelnemer.Groepsreis.Bestemming.Naam</td>
                    <td>@deelnemer.Groepsreis.Begindatum - @deelnemer.Groepsreis.Einddatum</td>
                    <td>@deelnemer.Opmerkingen</td>

                    <td><a asp-action="DetailsGroepsreis" asp-controller="Groepsreis" asp-route-id="@deelnemer.GroepsreisId" class="btn btn-primary">Details</a></td>
                </tr>
            }
        }
    }
</table>
<br />

<a asp-action="Index" class="btn btn-primary">Terug naar de lijst</a>