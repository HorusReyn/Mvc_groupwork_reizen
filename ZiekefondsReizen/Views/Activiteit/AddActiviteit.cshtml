@model ActiviteitCreateViewModel
@{
    ViewBag.Title = "AddActiviteit";
}
<h2>Nieuwe Activiteit</h2>

<div class="row">
    <div class="cpm-md-4">
        <form asp-action="AddActiviteit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beschrijving" class="control-label"></label>
                <input asp-for="Beschrijving" class="form-control" />
                <span asp-validation-for="Beschrijving" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Toevoegen" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <br />
    <a asp-action="Index" class="btn btn-primary">Terug naar de lijst</a>
</div>